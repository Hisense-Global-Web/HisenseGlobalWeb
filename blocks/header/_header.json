{
  "definitions": [
    {
      "title": "Header",
      "id": "homepageHeader",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "MegaMenuHeader",
              "model": "homepageHeader",
              "logo_image": "/content/dam/hisenense/logo.png",
              "logo_altText": "Hisense Logo",
              "mask_background": "rgba(0,0,0,0.8)",
              "nav_items": [
                {
                  "label": "TV",
                  "link": "/tv",
                  "mega_menu": {
                    "content_blocks": [
                      {
                        "block_type": "product_grid",
                        "title": "",
                        "products": [
                          {
                            "image": "/content/dam/hisenense/tv/rgb-miniled.png",
                            "name": "RGB MiniLED",
                            "link": "/tv/rgb-miniled"
                          },
                          {
                            "image": "/content/dam/hisenense/tv/uled-miniled.png",
                            "name": "ULED MiniLED",
                            "link": "/tv/uled-miniled"
                          },
                          {
                            "image": "/content/dam/hisenense/tv/lifestyle.png",
                            "name": "Lifestyle TV",
                            "link": "/tv/lifestyle"
                          },
                          {
                            "image": "/content/dam/hisenense/tv/qled.png",
                            "name": "QLED",
                            "link": "/tv/qled"
                          },
                          {
                            "image": "/content/dam/hisenense/tv/fhd.png",
                            "name": "FHD",
                            "link": "/tv/fhd"
                          }
                        ]
                      },
                      {
                        "block_type": "text_links",
                        "title": "Product support",
                        "links": [
                          { "label": "Register your TV", "link": "/support/register-tv" },
                          { "label": "Chat with us", "link": "/support/chat" },
                          { "label": "Where to buy", "link": "/store-locator" }
                        ]
                      },
                      {
                        "block_type": "buttons",
                        "buttons": [
                          { "label": "Explore TVs", "icon": "arrow-right", "link": "/tv" },
                          { "label": "View All", "link": "/tv/all-models" }
                        ]
                      }
                    ]
                  }
                },
                {
                  "label": "Projectors",
                  "link": "/projectors",
                  "mega_menu": {
                    "content_blocks": [
                      {
                        "block_type": "product_grid",
                        "title": "",
                        "products": [
                          { "image": "/content/dam/hisenense/proj/4k.png", "name": "4K Projectors", "link": "/projectors/4k" },
                          { "image": "/content/dam/hisenense/proj/portable.png", "name": "Portable Projectors", "link": "/projectors/portable" }
                        ]
                      },
                      {
                        "block_type": "buttons",
                        "buttons": [
                          { "label": "Explore Projectors", "link": "/projectors" }
                        ]
                      }
                    ]
                  }
                },
                {
                  "label": "Audio",
                  "link": "/audio",
                  "mega_menu": {
                    "content_blocks": [
                      {
                        "block_type": "product_grid",
                        "products": [
                          { "image": "/content/dam/hisenense/audio/soundbar.png", "name": "Soundbars", "link": "/audio/soundbars" },
                          { "image": "/content/dam/hisenense/audio/speaker.png", "name": "Speakers", "link": "/audio/speakers" }
                        ]
                      }
                    ]
                  }
                },
                {
                  "label": "Appliances",
                  "link": "/appliances",
                  "mega_menu": {
                    "content_blocks": [
                      {
                        "block_type": "product_grid",
                        "products": [
                          { "image": "/content/dam/hisenense/app/fridge.png", "name": "Fridges", "link": "/appliances/fridges" },
                          { "image": "/content/dam/hisenense/app/washer.png", "name": "Washers", "link": "/appliances/washers" }
                        ]
                      }
                    ]
                  }
                },
                {
                  "label": "Air product",
                  "link": "/air-product",
                  "mega_menu": {
                    "content_blocks": [
                      {
                        "block_type": "product_grid",
                        "products": [
                          { "image": "/content/dam/hisenense/air/ac.png", "name": "Air Conditioners", "link": "/air-product/conditioners" }
                        ]
                      }
                    ]
                  }
                },
                {
                  "label": "Commercial",
                  "link": "/commercial"
                }
              ],
              "right_items": [
                { "label": "Company", "link": "/company" },
                { "label": "Support", "link": "/support" }
              ],
              "icon_buttons": [
                { "icon_type": "search", "link": "/search" },
                { "icon_type": "cart", "link": "/cart" },
                { "icon_type": "user", "link": "/account" }
              ]
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "homepageHeader",
      "fields": [
        {
          "component": "reference",
          "valueType": "string",
          "name": "logo_image",
          "label": "Logo Image",
          "required": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "logo_alttext",
          "label": "Logo Alt Text",
          "required": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "mask_background",
          "label": "Fullscreen Mask Background (e.g. rgba(0,0,0,0.8))",
          "defaultValue": "rgba(0,0,0,0.8)"
        },
        {
          "component": "object-list",
          "valueType": "array",
          "name": "nav_items",
          "label": "Main Navigation (Mega Menu)",
          "fields": [
            {
              "component": "text",
              "name": "label",
              "label": "Menu Label",
              "required": true
            },
            {
              "component": "aem-content",
              "name": "link",
              "label": "Menu Link"
            },
            {
              "component": "object",
              "name": "mega_menu",
              "label": "Mega Menu Content (Show on Hover)",
              "fields": [
                {
                  "component": "object-list",
                  "name": "content_blocks",
                  "label": "Mega Menu Content Blocks",
                  "fields": [
                    {
                      "component": "select",
                      "name": "block_type",
                      "label": "Block Type",
                      "options": [
                        { "value": "product_grid", "label": "Product Grid (Image + Name)" },
                        { "value": "text_links", "label": "Text Link List" },
                        { "value": "buttons", "label": "Button Group" }
                      ],
                      "required": true
                    },
                    {
                      "component": "text",
                      "name": "title",
                      "label": "Block Title (Optional)"
                    },
                    {
                      "component": "object-list",
                      "name": "products",
                      "label": "Products (for Product Grid)",
                      "showIf": { "field": "block_type", "equals": "product_grid" },
                      "fields": [
                        { "component": "reference", "name": "image", "label": "Product Image", "required": true },
                        { "component": "text", "name": "name", "label": "Product Name", "required": true },
                        { "component": "aem-content", "name": "link", "label": "Product Link" }
                      ]
                    },
                    {
                      "component": "object-list",
                      "name": "links",
                      "label": "Links (for Text Link List)",
                      "showIf": { "field": "block_type", "equals": "text_links" },
                      "fields": [
                        { "component": "text", "name": "label", "label": "Link Label", "required": true },
                        { "component": "aem-content", "name": "link", "label": "Link URL" }
                      ]
                    },
                    {
                      "component": "object-list",
                      "name": "buttons",
                      "label": "Buttons (for Button Group)",
                      "showIf": { "field": "block_type", "equals": "buttons" },
                      "fields": [
                        { "component": "text", "name": "label", "label": "Button Text", "required": true },
                        { "component": "text", "name": "icon", "label": "Icon Name (Optional, e.g. arrow-right)" },
                        { "component": "aem-content", "name": "link", "label": "Button Link" }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "filters": []
}